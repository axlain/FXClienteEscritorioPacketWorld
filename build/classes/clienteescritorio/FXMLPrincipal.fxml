<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane fx:id="borderPaneContenedor" prefHeight="647.0" prefWidth="1180.0" stylesheets="@utilidad/EstiloVentanaPrincipal.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clienteescritorio.FXMLPrincipalController">

    <top>
        <Pane id="header" fx:id="header" prefHeight="80.0">
            <children>
                <Label id="titleApp" fx:id="titleApp" layoutX="25" layoutY="20" text="Home">
                    <font><Font size="32" /></font>
                </Label>

                <Label id="rol" fx:id="rol" layoutX="700.0" layoutY="28.0" text="Rol: Administrador" />
            </children>
        </Pane>
    </top>

    <left>
        <VBox id="sideMenu" fx:id="sideMenu" alignment="TOP_LEFT" prefWidth="220" spacing="10" style="-fx-padding: 20;">

            <children>
                <Button fx:id="btnEnvios" styleClass="menu-btn" text="Envíos" />
                <Button fx:id="btnPaquetes" styleClass="menu-btn" text="Paquetes" />
                <Button fx:id="btnColaboradores" onAction="#clickColaboradores" styleClass="menu-btn" text="Colaboradores" />
                <Button fx:id="btnUnidades" onAction="#clickUnidades" styleClass="menu-btn" text="Unidades" />
                <Button fx:id="btnSucursales" onAction="#clickSucursales" styleClass="menu-btn" text="Sucursales" />
                <Button fx:id="btnClientes" onAction="#clickClientes" styleClass="menu-btn" text="Clientes" />

                <Region VBox.vgrow="ALWAYS" />

                <Button id="cerrarSesionBtn" fx:id="cerrarSesionBtn" onAction="#clickCerrarSesion" text="Cerrar sesión" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding: 40;">
            <children>

                <Label id="bienvenidaTxt" fx:id="bienvenidaTxt" text="Bienvenido(a):">
                    <font><Font size="22" /></font>
                </Label>

                <Label id="name" fx:id="name" text="Nombre Apellidos">
                    <font><Font size="32" /></font>
                </Label>

                <HBox spacing="10">
                    <children>
                        <Label text="No. de Personal:" />
                        <Label id="numeroPersonal" fx:id="numeroPersonal" text="XXXXXX" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

</BorderPane>
