<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            stylesheets="@utilidad/EstiloVentanaPrincipal.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clienteescritorio.FXMLAdministracionUnidadesController">

    <content>
        <VBox spacing="20"
              styleClass="card"
              maxWidth="Infinity"
              maxHeight="Infinity"
              VBox.vgrow="ALWAYS">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Administración de Unidades"
                   style="-fx-text-fill:#18529D; -fx-font-size:28; -fx-font-weight:bold;" />

            <HBox alignment="CENTER_LEFT" spacing="12">
                <children>
                    <Label text="Buscar:" style="-fx-font-weight:bold; -fx-font-size:14;" />
                    <TextField fx:id="tfBuscar" promptText="VIN, Marca o NII" styleClass="text-field" prefWidth="350" />
                    <Button fx:id="btnBuscar" text="Buscar" styleClass="button" onAction="#clickBuscar"/>
                    <Button fx:id="btnLimpiar" text="Limpiar" styleClass="button-secondary" onAction="#clickLimpiarBusqueda"/>
                </children>
            </HBox>

            <TableView fx:id="tvUnidades" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="tcVIN" text="VIN" prefWidth="180"/>
                    <TableColumn fx:id="tcNII" text="NII" prefWidth="150"/>
                    <TableColumn fx:id="tcEstatusUnidad" text="Estatus de la Unidad" prefWidth="170"/>
                    <TableColumn fx:id="tcMarca" text="Marca" prefWidth="150"/>
                    <TableColumn fx:id="tcModelo" text="Modelo" prefWidth="150"/>
                    <TableColumn fx:id="tcAnio" text="Año" prefWidth="100"/>
                    <TableColumn fx:id="tcTipoDeUnidad" text="Tipo de unidad" prefWidth="160"/>
                    <TableColumn fx:id="tcConductor" text="Conductor" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="btnRegistrar" text="Registrar Unidad" styleClass="button-success" onAction="#clickRegistrar"/>
                    <Button fx:id="btnEditar" text="Editar" styleClass="button" onAction="#clickEditar"/>
                    <Button fx:id="btnDarBaja" text="Dar de baja" styleClass="button-danger" onAction="#clickDarBaja"/>
                    <Button fx:id="btnAsignarUnidad" text="Asignar Conductor" styleClass="button-secondary" onAction="#clickAsignarUnidad"/>
                    <Button fx:id="btnDesasignarConductor" text="Desasignar Conductor" styleClass="button-secondary" onAction="#clickDesasignarConductor"/>
                </children>
            </HBox>

        </VBox>
    </content>
</ScrollPane>
