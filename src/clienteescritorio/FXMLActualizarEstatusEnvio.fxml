<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="360.0" prefWidth="520.0"
      spacing="15.0"
      styleClass="card"
      stylesheets="@utilidad/EstiloVentanaPrincipal.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clienteescritorio.FXMLActualizarEstatusEnvioController">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <children>

        <Label text="Actualizar Estatus"
               style="-fx-text-fill:#18529D; -fx-font-size:22px; -fx-font-weight:bold;"/>

        <VBox spacing="5">
            <children>
                <Label text="Número de guía" style="-fx-font-weight:bold;"/>
                <Label fx:id="lblGuia" text="PW-XXXX" />
            </children>
        </VBox>

        <VBox spacing="5">
            <children>
                <Label text="Nuevo estatus" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbEstatus" prefWidth="360" promptText="Seleccione un estatus"/>
            </children>
        </VBox>

        <VBox spacing="5">
            <children>
                <Label text="Comentario (obligatorio si es Detenido o Cancelado)" style="-fx-font-weight:bold;"/>
                <TextArea fx:id="taComentario"
                          prefRowCount="3"
                          promptText="Escribe un comentario..."/>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar" text="Guardar" styleClass="button-success" onAction="#clickGuardar"/>
                <Button fx:id="btnCancelar" text="Cancelar" styleClass="button-secondary" onAction="#clickCancelar"/>
            </children>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
