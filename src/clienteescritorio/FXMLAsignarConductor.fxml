<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" 
      minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="400.0" prefWidth="500.0"
      spacing="15.0"
      styleClass="card"
      stylesheets="@utilidad/EstiloVentanaPrincipal.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clienteescritorio.FXMLAsignarConductorController">

    <children>

        <!-- TÍTULO -->
        <Label fx:id="lblTitulo"
               text="Asignar Conductor a Unidad"
               style="-fx-text-fill: #18529D; -fx-font-size: 22px; -fx-font-weight: bold;" />

        <!-- INFORMACIÓN DE LA UNIDAD -->
        <VBox spacing="5.0">
            <children>
                <Label text="Unidad Seleccionada" style="-fx-font-weight: bold;" />
                <Label fx:id="lblUnidad" 
                       text="VIN - Modelo - Año"
                       style="-fx-font-size: 14px; -fx-text-fill: #333;" />
            </children>
        </VBox>

        <!-- SELECTOR DE CONDUCTOR -->
        <VBox spacing="5.0">
            <children>
                <Label style="-fx-font-weight: bold;" 
                       text="Seleccionar Conductor *" />
                <ComboBox fx:id="cbConductores"
                          prefWidth="350.0"
                          promptText="Seleccione un conductor"
                          styleClass="combo-box" />
            </children>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <children>
                <Button fx:id="btnAsignar"
                        text="Asignar"
                        styleClass="button-success"
                        onAction="#clickAsignar" />

                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        styleClass="button-secondary"
                        onAction="#clickCancelar" />
            </children>
        </HBox>

    </children>

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

</VBox>
