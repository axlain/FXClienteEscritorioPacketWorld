<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            stylesheets="@utilidad/EstiloVentanaPrincipal.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clienteescritorio.FXMLAdministracionColaboradoresController">

    <content>
        <VBox spacing="20"
              styleClass="card"
              maxWidth="Infinity"
              maxHeight="Infinity"
              VBox.vgrow="ALWAYS">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Administración de Colaboradores"
                   style="-fx-text-fill:#18529D; -fx-font-size:28; -fx-font-weight:bold;" />

            <HBox alignment="CENTER_LEFT" spacing="12">
                <children>
                    <Label text="Buscar:" style="-fx-font-weight:bold; -fx-font-size:14;" />
                    <TextField fx:id="tfBuscar" promptText="Número personal, nombre o CURP" styleClass="text-field" prefWidth="350" />
                    <Button fx:id="btnBuscar" text="Buscar" styleClass="button" onAction="#clickBuscar"/>
                    <Button fx:id="btnLimpiar" text="Limpiar" styleClass="button-secondary" onAction="#clickLimpiarBusqueda"/>
                </children>
            </HBox>

            <TableView fx:id="tvColaboradores" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="tcNumeroPersonal" text="No. Personal" prefWidth="150"/>
                    <TableColumn fx:id="tcNombre" text="Nombre Completo" prefWidth="200"/>
                    <TableColumn fx:id="tcCurp" text="CURP" prefWidth="180"/>
                    <TableColumn fx:id="tcCorreo" text="Correo" prefWidth="200"/>
                    <TableColumn fx:id="tcRol" text="Rol" prefWidth="150"/>
                    <TableColumn fx:id="tcSucursal" text="Sucursal" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="btnRegistrar" text="Registrar Colaborador" styleClass="button-success" onAction="#clickRegistrar"/>
                    <Button fx:id="btnEditar" text="Editar" styleClass="button" onAction="#clickEditar"/>
                    <Button fx:id="btnEliminar" text="Eliminar" styleClass="button-danger" onAction="#clickEliminar"/>
                    <Button fx:id="btnAsignarUnidad" text="Asignar Unidad" styleClass="button-secondary" onAction="#clickAsignarUnidad"/>
                </children>
            </HBox>

        </VBox>
    </content>
</ScrollPane>
