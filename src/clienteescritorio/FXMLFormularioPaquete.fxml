<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="520.0" prefWidth="500.0"
      spacing="15.0"
      styleClass="card"
      stylesheets="@utilidad/EstiloVentanaPrincipal.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clienteescritorio.FXMLFormularioPaqueteController">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <children>

        <Label fx:id="lblTitulo"
               text="Registrar Paquete"
               style="-fx-text-fill:#18529D; -fx-font-size:22px; -fx-font-weight:bold;"/>

        <!-- ENVIÓ (ComboBox con número de guía) -->
        <VBox spacing="5">
            <children>
                <Label text="Envío (Número de guía)" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbEnvio"
                          prefWidth="350"
                          promptText="Seleccione un envío"/>
            </children>
        </VBox>

        <VBox spacing="5">
            <children>
                <Label text="Descripción" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfDescripcion" prefWidth="350" promptText="Ingrese la descripción"/>
            </children>
        </VBox>

        <VBox spacing="5">
            <children>
                <Label text="Peso" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfPeso" prefWidth="350" promptText="Ingrese el peso"/>
            </children>
        </VBox>

        <HBox spacing="10">
            <children>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Alto" style="-fx-font-weight:bold;"/>
                        <TextField fx:id="tfAlto" prefWidth="160" promptText="Alto"/>
                    </children>
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Ancho" style="-fx-font-weight:bold;"/>
                        <TextField fx:id="tfAncho" prefWidth="160" promptText="Ancho"/>
                    </children>
                </VBox>

                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Profundidad" style="-fx-font-weight:bold;"/>
                        <TextField fx:id="tfProfundidad" prefWidth="160" promptText="Profundidad"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar" text="Guardar"
                        styleClass="button-success"
                        onAction="#clickGuardar"/>
                <Button fx:id="btnCancelar" text="Cancelar"
                        styleClass="button-secondary"
                        onAction="#clickCancelar"/>
            </children>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
