<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="680.0" prefWidth="500.0" spacing="15.0" styleClass="card" stylesheets="@utilidad/EstiloVentanaPrincipal.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clienteescritorio.FXMLFormularioUnidadController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20" />
    </padding>

    <children>

        <!-- TÍTULO -->
        <Label fx:id="lblTitulo" style="-fx-text-fill: #18529D; -fx-font-size: 22px; -fx-font-weight: bold;" text="Registrar Unidad" />

        <!-- MARCA -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="Marca " />
                <TextField fx:id="tfMarca" promptText="Ingrese la marca" />
            </children>
        </VBox>

        <!-- MODELO -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="Modelo " />
                <TextField fx:id="tfModelo" promptText="Ingrese el modelo" />
            </children>
        </VBox>

        <!-- AÑO -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="Año " />
                <TextField fx:id="tfAnio" promptText="Ejemplo: 2025" />
            </children>
        </VBox>

        <!-- VIN -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="VIN " />
                <TextField fx:id="tfVin" promptText="Número VIN " />
            </children>
        </VBox>

        <!-- TIPO DE UNIDAD -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="Tipo de Unidad " />
                <ComboBox fx:id="cbTipoUnidad" prefWidth="300" promptText="Seleccione un tipo" />
            </children>
        </VBox>

        <!-- SUCURSAL -->
        <VBox spacing="5">
            <children>
                <Label style="-fx-font-weight: bold;" text="Sucursal " />
                <ComboBox fx:id="cbSucursal" prefWidth="300" promptText="Seleccione una sucursal" />
            </children>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar" onAction="#clickGuardar" styleClass="button-success" text="Guardar" />
                <Button fx:id="btnCancelar" onAction="#clickCancelar" styleClass="button-secondary" text="Cancelar" />
            </children>
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </HBox>

    </children>
</VBox>
