<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            stylesheets="@utilidad/EstiloVentanaPrincipal.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clienteescritorio.FXMLAdministracionPaqueteController">

    <content>
        <VBox spacing="20"
              styleClass="card"
              maxWidth="Infinity"
              maxHeight="Infinity"
              VBox.vgrow="ALWAYS">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TÍTULO -->
            <Label text="Administración de Paquetes"
                   style="-fx-text-fill:#18529D; -fx-font-size:28; -fx-font-weight:bold;" />

            <!-- BÚSQUEDA POR NÚMERO DE GUÍA -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <children>
                    <Label text="Buscar por Núm. de Guía:"
                           style="-fx-font-weight:bold; -fx-font-size:14;" />

                    <TextField fx:id="tfBuscarGuia"
                               promptText="Número de guía"
                               prefWidth="280"
                               styleClass="text-field"/>

                    <Button fx:id="btnBuscar"
                            text="Buscar"
                            styleClass="button"
                            onAction="#clickBuscar"/>

                    <Button fx:id="btnLimpiar"
                            text="Limpiar"
                            styleClass="button-secondary"
                            onAction="#clickLimpiar"/>
                </children>
            </HBox>

            <!-- TABLA DE PAQUETES -->
            <TableView fx:id="tvPaquetes"
                        VBox.vgrow="ALWAYS"
                        minHeight="0"
                        styleClass="table-view">


                <columns>
                    <!-- Número de Guía -->
                    <TableColumn fx:id="tcNumeroGuia"
                                 text="Número de Guía"
                                 prefWidth="180"/>

                    <!-- Descripción -->
                    <TableColumn fx:id="tcDescripcion"
                                 text="Descripción"
                                 prefWidth="220"/>

                    <!-- Peso -->
                    <TableColumn fx:id="tcPeso"
                                 text="Peso (kg)"
                                 prefWidth="100"/>

                    <!-- Alto -->
                    <TableColumn fx:id="tcAlto"
                                 text="Alto (cm)"
                                 prefWidth="100"/>

                    <!-- Ancho -->
                    <TableColumn fx:id="tcAncho"
                                 text="Ancho (cm)"
                                 prefWidth="100"/>

                    <!-- Profundidad -->
                    <TableColumn fx:id="tcProfundidad"
                                 text="Profundidad (cm)"
                                 prefWidth="120"/>
                </columns>

            </TableView>

            <!-- BOTONES DE ACCIÓN -->
            <HBox alignment="CENTER" spacing="15">
                <children>
                    <Button fx:id="btnRegistrarPaquete"
                            text="Registrar Paquete"
                            styleClass="button-success"
                            onAction="#clickRegistrarPaquete"/>

                    <Button fx:id="btnEditarPaquete"
                            text="Editar Paquete"
                            styleClass="button"
                            onAction="#clickEditarPaquete"/>

                    <Button fx:id="btnEliminarPaquete"
                            text="Eliminar Paquete"
                            styleClass="button-danger"
                            onAction="#clickEliminarPaquete"/>
                </children>
            </HBox>

        </VBox>
    </content>
</ScrollPane>
