<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="1115.0" prefWidth="498.0" spacing="15.0" styleClass="card" stylesheets="@utilidad/EstiloVentanaPrincipal.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clienteescritorio.FXMLFormularioClienteController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20" />
    </padding>

    <children>

        <!-- TÍTULO -->
        <Label fx:id="lblTitulo" style="-fx-text-fill:#18529D; -fx-font-size:22px; -fx-font-weight:bold;" text="Registrar Cliente" />

        <!-- NOMBRE -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Nombre" />
               <TextField fx:id="tfNombre" promptText="Nombre del cliente" />
   </children>
        </VBox>

        <!-- APELLIDO PATERNO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Apellido Paterno" />
               <TextField fx:id="tfApellidoPaterno" promptText="Apellido paterno" />
   </children>
        </VBox>

        <!-- APELLIDO MATERNO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Apellido Materno" />
               <TextField fx:id="tfApellidoMaterno" promptText="Apellido materno" />
   </children>
        </VBox>

        <!-- CORREO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Correo electrónico" />
               <TextField fx:id="tfCorreo" promptText="ejemplo@correo.com" />
   </children>
        </VBox>

        <!-- TELÉFONO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Teléfono" />
               <TextField fx:id="tfTelefono" promptText="10 dígitos" />
   </children>
        </VBox>

        <!-- CALLE -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Calle" />
               <TextField fx:id="tfCalle" promptText="Nombre de la calle" />
   </children>
        </VBox>

        <!-- NÚMERO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Número exterior" />
               <TextField fx:id="tfNumero" promptText="Ejemplo: 15" />
   </children>
        </VBox>

        <!-- CÓDIGO POSTAL -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Código Postal" />
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <children>
                      <TextField fx:id="tfCodigoPostal" prefWidth="200" promptText="Ej: 91000" />
                      <Button fx:id="btnBuscarCP" onAction="#clicBuscarCP" style="-fx-background-color: #18529D; -fx-text-fill: white; -fx-cursor: hand;" text="Buscar" />
                  </children>
               </HBox>
   </children>
        </VBox>

        <!-- PAÍS -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="País" />
               <ComboBox fx:id="cbPais" prefWidth="300" promptText="Seleccione un país" />
   </children>
        </VBox>

        <!-- ESTADO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Estado" />
               <ComboBox fx:id="cbEstado" disable="true" prefWidth="300" promptText="Seleccione un estado" />
   </children>
        </VBox>

        <!-- MUNICIPIO -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Municipio" />
               <ComboBox fx:id="cbMunicipio" disable="true" prefWidth="300" promptText="Seleccione un municipio" />
   </children>
        </VBox>

        <!-- COLONIA -->
        <VBox spacing="5">
   <children>
               <Label style="-fx-font-weight:bold;" text="Colonia" />
               <ComboBox fx:id="cbColonia" disable="true" prefWidth="300" promptText="Seleccione una colonia" />
   </children>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar" onAction="#clickGuardar" styleClass="button-success" text="Guardar" />

                <Button fx:id="btnCancelar" onAction="#clickCancelar" styleClass="button-secondary" text="Cancelar" />
            </children>
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </HBox>

    </children>
</VBox>
