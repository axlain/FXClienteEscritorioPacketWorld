<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700.0" prefWidth="500.0" spacing="15.0"
      styleClass="card"
      stylesheets="@utilidad/EstiloVentanaPrincipal.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clienteescritorio.FXMLFormularioSucursalController">

    <padding>
        <Insets bottom="20" left="25" right="25" top="20"/>
    </padding>

    <children>

        <!-- TÍTULO -->
        <Label fx:id="lblTitulo"
               text="Registrar Sucursal"
               style="-fx-text-fill:#18529D; -fx-font-size:22px; -fx-font-weight:bold;"/>

        <!-- NOMBRE CORTO -->
        <VBox spacing="5">
            <children>
                <Label text="Nombre Corto" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfNombreCorto" promptText="Ejemplo: Sucursal Xalapa SEV"/>
            </children>
        </VBox>

        <!-- CALLE -->
        <VBox spacing="5">
            <children>
                <Label text="Calle" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfCalle" promptText="Ingresa la calle"/>
            </children>
        </VBox>

        <!-- NÚMERO -->
        <VBox spacing="5">
            <children>
                <Label text="Número" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfNumero" promptText="Ejemplo: 20"/>
            </children>
        </VBox>

        <!-- PAÍS -->
        <VBox spacing="5">
            <children>
                <Label text="País" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbPais"
                          prefWidth="300"
                          promptText="Seleccione un país"/>
            </children>
        </VBox>

        <!-- ESTADO -->
        <VBox spacing="5">
            <children>
                <Label text="Estado" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbEstado"
                          prefWidth="300"
                          promptText="Seleccione un estado"
                          disable="true"/>
            </children>
        </VBox>

        <!-- MUNICIPIO -->
        <VBox spacing="5">
            <children>
                <Label text="Municipio" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbMunicipio"
                          prefWidth="300"
                          promptText="Seleccione un municipio"
                          disable="true"/>
            </children>
        </VBox>

        <!-- COLONIA -->
        <VBox spacing="5">
            <children>
                <Label text="Colonia" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbColonia"
                          prefWidth="300"
                          promptText="Seleccione una colonia"
                          disable="true"/>
            </children>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar"
                        text="Guardar"
                        onAction="#clickGuardar"
                        styleClass="button-success"/>

                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        onAction="#clickCancelar"
                        styleClass="button-secondary"/>
            </children>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
