<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="720.0" prefWidth="520.0"
      spacing="15.0"
      styleClass="card"
      stylesheets="@utilidad/EstiloVentanaPrincipal.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clienteescritorio.FXMLFormularioDestinatarioController">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <children>

        <!-- TÍTULO -->
        <Label fx:id="lblTitulo"
               text="Registrar Destinatario"
               style="-fx-text-fill:#18529D; -fx-font-size:22px; -fx-font-weight:bold;"/>

        <!-- NOMBRE -->
        <VBox spacing="5">
            <children>
                <Label text="Nombre" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfNombre" promptText="Ej: Fernando"/>
            </children>
        </VBox>

        <!-- APELLIDO PATERNO -->
        <VBox spacing="5">
            <children>
                <Label text="Apellido Paterno" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfApellidoPaterno" promptText="Ej: Escobar"/>
            </children>
        </VBox>

        <!-- APELLIDO MATERNO -->
        <VBox spacing="5">
            <children>
                <Label text="Apellido Materno" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfApellidoMaterno" promptText="Ej: Robles"/>
            </children>
        </VBox>

        <!-- CALLE -->
        <VBox spacing="5">
            <children>
                <Label text="Calle" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfCalle" promptText="Ej: Calle Presidentes"/>
            </children>
        </VBox>

        <!-- NÚMERO -->
        <VBox spacing="5">
            <children>
                <Label text="Número" style="-fx-font-weight:bold;"/>
                <TextField fx:id="tfNumero" promptText="Ej: 45"/>
            </children>
        </VBox>

        <!-- CP + BUSCAR -->
        <VBox spacing="5">
            <children>
                <Label text="Código Postal" style="-fx-font-weight:bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="tfCodigoPostal" promptText="Ej: 91000" prefWidth="200"/>
                        <Button fx:id="btnBuscarCP"
                                text="Buscar"
                                onAction="#clicBuscarCP"
                                style="-fx-background-color: #18529D; -fx-text-fill: white; -fx-cursor: hand;"/>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- PAÍS -->
        <VBox spacing="5">
            <children>
                <Label text="País" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbPais" prefWidth="350" promptText="País" disable="true"/>
            </children>
        </VBox>

        <!-- ESTADO -->
        <VBox spacing="5">
            <children>
                <Label text="Estado" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbEstado" prefWidth="350" promptText="Estado" disable="true"/>
            </children>
        </VBox>

        <!-- MUNICIPIO -->
        <VBox spacing="5">
            <children>
                <Label text="Municipio" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbMunicipio" prefWidth="350" promptText="Municipio" disable="true"/>
            </children>
        </VBox>

        <!-- COLONIA -->
        <VBox spacing="5">
            <children>
                <Label text="Colonia" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbColonia" prefWidth="350" promptText="Colonia" disable="true"/>
            </children>
        </VBox>

        <!-- BOTONES -->
        <HBox alignment="CENTER" spacing="15">
            <children>
                <Button fx:id="btnGuardar"
                        text="Guardar"
                        onAction="#clickGuardar"
                        styleClass="button-success"/>
                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        onAction="#clickCancelar"
                        styleClass="button-secondary"/>
            </children>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
